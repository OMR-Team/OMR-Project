<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_black_7">

        <TextView
            android:id="@+id/numResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/theme_black_7"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:background="@color/theme_black_4"
            android:paddingVertical="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="77"/>

        <ImageView
            android:id="@+id/myResultImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="13dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/numResult"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/omr_result_1"/>

        <TextView
            android:id="@+id/myResultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="13dp"
            android:text="-"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/numResult"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>